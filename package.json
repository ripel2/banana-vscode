{
  "name": "banana-vscode",
  "displayName": "banana-vscode",
  "description": "Epitech coding style verification for VSCode",
  "publisher": "ripel2",
  "repository": {
    "type": "git",
    "url": "https://github.com/ripel2/banana-vscode"
  },
  "version": "1.2.0",
  "engines": {
    "vscode": "^1.72.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [{
      "command": "banana-vscode.startBanana",
      "title": "Banana: Check for any coding style errors in the current working directory"
    },
    {
      "command": "banana-vscode.clearAllBananaErrors",
      "title": "Banana: Clear all the detected coding style errors"
    }],
    "configuration": {
      "title": "Banana",
      "properties": {
        "banana-vscode.ignoreFilesInGitignore": {
          "type": "string",
          "default": "O1 only",
          "enum": [
            "true",
            "false",
            "O1 only"
          ],
          "description": "Does not show errors for files listed in .gitignore. If \"O1 only\" is selected, the extension will only hide O1 errors for those files."
        },
        "banana-vscode.keepReports": {
          "type": "boolean",
          "default": false,
          "description": "Keep the reports generated by banana in the workspace folder"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.72.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "eslint": "^8.24.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.8.4",
    "@vscode/test-electron": "^2.1.5"
  }
}
